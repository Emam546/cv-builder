{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "noEmit": false,
        "baseUrl": "./",
        "paths": {
            "@serv/*": [
                "./server/src/*"
            ],
            "@src/*": [
                "./src/*"
            ],
        }
    },
    "include": [
        "server",
        "src",
        "types/*.d.ts"
    ]
}