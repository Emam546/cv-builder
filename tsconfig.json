{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@serv/*": [
        "./server/src/*"
      ]
    }
  },
  "include": [
    "src",
    "server",
    "types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}