{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@serv/*": [
        "./server/src/*"
      ]
    },
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "build.ts",
    "src/**/*.ts",
    "server/src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
